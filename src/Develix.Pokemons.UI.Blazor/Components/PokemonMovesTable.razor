@using Develix.Pokemons.State.Moves;
@if (Moves.Count > 0)
{
    <MudPaper Class="pa-4 ma-2" Elevation="1">
        <MudGrid>
            <MudItem xs="12">
                <MudTable T="PokemonMoveTableRow" Items="Moves" OnRowClick="RowClickEvent">
                    <HeaderContent>
                        <MudTh>Id</MudTh>
                        <MudTh>Name</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="Id">@context.Id</MudTd>
                        <MudTd DataLabel="Name">@GetGermanAttackeName(context.Names)</MudTd>
                    </RowTemplate>
                    <ChildRowContent>
                        @if (context.ShowDetails)
                        {
                            <MudTr>Accuracy: @context.Accuracy</MudTr>
                            <MudTr>Pp: @GetDisplayName(context.Pp)</MudTr>
                            <MudTr>Power: @GetDisplayName(context.Power)</MudTr>
                            <MudTr> Target: @context.Target</MudTr>
                            <MudTr> EffectEntries: @GetGermanEffectEntriesName(context.EffectEntries)</MudTr>
                            <MudTr> Effectchance: @GetDisplayName(context.EffectChance)</MudTr>
                            <MudTr> DamageClass: @context.DamageClass</MudTr>
                            <MudTr> FlavorTexetEntries: @GetGermanFlavorText(context.FlavorTextEntries)</MudTr>
                            <MudTr> Priority: @context.Priority</MudTr>
                        }
                    </ChildRowContent>
                    <PagerContent>
                        <MudTablePager HideRowsPerPage="true" PageSizeOptions="new int[]{10}" />
                    </PagerContent>
                </MudTable>
            </MudItem>
            <MudItem>
                <MudButton Disabled="@GetMovesDisabled()" OnClick="GetAllMoves" Variant="Variant.Outlined" Color="@MudBlazor.Color.Primary">
                    Moves
                </MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>
}