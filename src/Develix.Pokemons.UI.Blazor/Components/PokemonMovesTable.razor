@using Develix.Pokemons.State.Moves;
@if (Moves.Count > 0)
{
    <MudPaper Class="pa-4 ma-2" Elevation="1">
        <MudGrid>
            <MudItem xs="12">
                <MudTable T="PokemonMoveTableRow" Items="Moves" OnRowClick="RowClickEvent">
                    <HeaderContent>
                        <MudTh>Id</MudTh>
                        <MudTh>Name</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="Id">@context.Id</MudTd>
                        <MudTd DataLabel="Name">@GetGermanName(context.Names)</MudTd>
                    </RowTemplate>
                    <ChildRowContent>
                        @if (context.ShowDetails)
                        {
                            <MudTr>
                                <MudTd colspan="2">
                                    <MudSimpleTable Dense="true">
                                        <MudTr>
                                            <MudTd>Trefferquote</MudTd>
                                            <MudTd>@GetDisplayName(context.Accuracy)</MudTd>
                                        </MudTr>
                                        <MudTr>
                                            <MudTd>Ap</MudTd>
                                            <MudTd>@GetDisplayName(context.Pp)</MudTd>
                                        </MudTr>
                                        <MudTr>
                                            <MudTd>Stärke</MudTd>
                                            <MudTd>@GetDisplayName(context.Power)</MudTd>
                                        </MudTr>
                                        <MudTr>
                                            <MudTd>Ziel</MudTd>
                                            <MudTd>@context.Target</MudTd>
                                        </MudTr>
                                        <MudTr>
                                            <MudTd>Effekt</MudTd>
                                            <MudTd>@GetGermanEffectEntriesName(context.EffectEntries)</MudTd>
                                        </MudTr>
                                        <MudTr>
                                            <MudTd>Effect Chance</MudTd>
                                            <MudTd>@GetDisplayName(context.EffectChance)</MudTd>
                                        </MudTr>
                                        <MudTr>
                                            <MudTd>Schadensklasse</MudTd>
                                            <MudTd>@GetGermanName(@context.DamageClass?.Names)</MudTd>
                                        </MudTr>
                                        <MudTr>
                                            <MudTd>Flavor Texet</MudTd>
                                            <MudTd>@context.FlavorTextEntries</MudTd>
                                        </MudTr>
                                        <MudTr>
                                            <MudTd>Priorität</MudTd>
                                            <MudTd>@GetDisplayName(context.Priority)</MudTd>
                                        </MudTr>
                                    </MudSimpleTable>
                                </MudTd>
                            </MudTr>
                        }
                    </ChildRowContent>
                    <PagerContent>
                        <MudTablePager HideRowsPerPage="true" PageSizeOptions="new int[]{10}" />
                    </PagerContent>
                </MudTable>
            </MudItem>
            <MudItem>
                <MudButton Disabled="@GetMovesDisabled()" OnClick="GetAllMoves" Variant="Variant.Outlined" Color="@MudBlazor.Color.Primary">
                    Moves
                </MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>
}